<h1>新規グループ作成</h1>
<p>ここでは、新しい公式グループを作成できます。必要な情報を入力してください。</p>

<%= form_with model: @group, url: admin_groups_path, method: :post do |f| %>
  
  <!-- 🔹 グループ基本情報 -->
  <h2>グループ情報</h2>
  <div class="mb-3">
    <%= f.label :name, "グループ名" %>
    <%= f.text_field :name, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :description, "グループの説明" %>
    <%= f.text_area :description, class: "form-control" %>
  </div>

  <!-- 🔹 公開範囲と参加ルール -->
  <h2>参加ルール</h2>
  <div class="mb-3">
    <%= f.label :privacy, "公開範囲" %>
    <%= f.select :privacy, [["公開（誰でも参加可能）", "public"], ["承認制（管理者の許可が必要）", "approval"], ["非公開（招待制）", "private"]], prompt: "選択してください", class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :join_policy, "参加ルール" %>
    <%= f.select :join_policy, [["誰でも参加可能", "open"], ["管理者のみ参加可能", "admin_only"], ["招待制", "invite_only"]], prompt: "選択してください", class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :location, "活動場所" %>
    <%= f.text_field :location, class: "form-control", placeholder: "例: 東京, 大阪" %>
  </div>

  <!-- 🔹 グループのカテゴリ -->
  <h2>グループの種類</h2>
  <div class="mb-3">
  <%= f.label :category, "グループの種類" %>
  <%= f.select :category, [["公式プロジェクト", "official"], ["一般コミュニティ", "community"], ["イベントグループ", "event"]], prompt: "選択してください", class: "form-control" %>
  </div>

  <%= f.submit "グループを作成", class: "btn btn-success mt-3" %>
<% end %>

<%= link_to "グループ管理ページへ戻る", admin_groups_path, class: "btn btn-secondary mt-3" %>
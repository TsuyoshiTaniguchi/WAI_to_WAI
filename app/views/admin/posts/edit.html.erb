<h2>投稿の編集</h2>

<% if @post %>  <!-- `@post` が存在するかチェック -->
  <%= form_with model: @post, url: admin_post_path(@post), method: :patch do |f| %>
    <% if @post.errors.any? %>
      <div class="alert alert-danger">
        <% @post.errors.full_messages.each do |message| %>
          <p><%= message %></p>
        <% end %>
      </div>
    <% end %>

    <div>
      <%= f.label :title, "タイトル" %>
      <%= f.text_field :title, class: "form-control", placeholder: "タイトルを入力" %>
    </div>

    <div>
      <%= f.label :content, "内容" %>
      <%= f.text_area :content, class: "form-control", placeholder: "ここに内容を入力", rows: 5 %>
    </div>

    <div class="mt-3">
      <%= f.submit "更新する", class: "btn btn-primary" %>
    </div>
  <% end %>
<% else %>
  <p class="text-danger">指定された投稿は存在しません。</p>
  <%= link_to "投稿一覧へ戻る", admin_posts_path, class: "btn btn-secondary" %>
<% end %>


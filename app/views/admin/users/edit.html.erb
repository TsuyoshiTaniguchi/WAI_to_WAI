<h1>ユーザー情報編集</h1>

<%= form_for @user, url: admin_user_path(@user), method: :patch do |f| %>
  <div>
    <%= f.label :name, "名前" %>
    <%= f.text_field :name, value: @user.name, class: "form-control" %>
  </div>

  <div>
    <%= f.label :email, "メール" %>
    <%= f.text_field :email, value: @user.email, class: "form-control" %>
  </div>

  <div>
   <%= f.label :status, "ステータス" %>
   <%= f.select :status, User.statuses.keys.map { |key| [I18n.t("enums.user.status.#{key}"), key] }, class: "form-control" %>
  </div>

  <div class="button-group d-flex justify-content-between">
  <%= f.submit "更新", class: "btn btn-primary" %>
  <%= f.submit "戻る", class: "btn btn-secondary", name: "cancel" %>
  </div>
<% end %>
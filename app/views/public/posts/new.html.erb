<h1>新規投稿</h1>

<%= form_with model: @post, url: @group.nil? ? posts_path : user_group_posts_path(current_user, @group), local: true do |f| %>
  <% if @group.present? %>
    <%= hidden_field_tag :group_id, @group.id %>
  <% end %>

  <div>
    <%= f.label :title, "タイトル" %>
    <%= f.text_field :title, class: "form-control", placeholder: "ここにタイトルを入力" %>
  </div>

  <div>
    <%= f.label :content, "内容" %>
    <%= f.text_area :content, class: "form-control", placeholder: "ここに内容を入力", rows: 5 %>
  </div>

  <div>
    <%= f.file_field :images, multiple: true %>
    <%= f.submit "イメージを追加" %>
  </div>
  

  <div>
    <%= f.submit "投稿する", class: "btn btn-primary" %>
  </div>
<% end %> 

  <div>
    <%= link_to "戻る", request.referer || posts_path, class: "btn btn-secondary" %>
  </div>

  <div>
    <%= link_to "投稿一覧へ", posts_path, class: "btn btn-outline-primary" %>
  </div>
<h2><%= @post.title %></h2>
<p><%= @post.content %></p>

<% if @post.user == current_user %>
  <%= link_to "編集", edit_public_post_path(@post) %>
  <%= link_to "削除", public_post_path(@post), method: :delete, 
  data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger" %>
<% end %>

<%= link_to "戻る", public_posts_path %>
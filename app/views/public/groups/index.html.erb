<h1>グループ一覧</h1>

<h2>公式プロジェクト</h2>
<% Group.official.each do |group| %>
  <p><%= link_to group.name, group_path(group) %></p>
<% end %>

<h2>ユーザー作成グループ</h2>
<% Group.user_created.each do |group| %>
  <p><%= link_to group.name, group_path(group) %></p>
<% end %>

<%= link_to "新規グループ作成", new_group_path, class: "btn btn-primary mt-3" %>
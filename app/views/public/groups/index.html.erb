<h1 class="mt-4 text-center fw-bold">グループ一覧</h1>

<div class="container my-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <%= form_with url: groups_path, method: :get, local: true, class: "input-group" do %>
        <%= text_field_tag :query, params[:query], placeholder: "グループを検索...", class: "form-control" %>
        <button class="btn btn-outline-secondary" type="submit">検索</button>
      <% end %>
    </div>
  </div>
</div>

<% unless current_user.guest? %>
  <div class="d-flex justify-content-end mt-4">
    <%= link_to "➕ 新しいグループを作成", new_group_path, class: "btn btn-success fw-bold" %>
  </div>
<% end %>

<ul class="nav nav-pills nav-justified mt-3">
  <li class="nav-item">
    <a class="nav-link active fw-bold" data-bs-toggle="tab" href="#search_results">🔍 検索結果</a>
  </li>
  <li class="nav-item">
    <a class="nav-link fw-bold" data-bs-toggle="tab" href="#popular_groups">⭐ 人気グループ</a>
  </li>
  <li class="nav-item">
    <a class="nav-link fw-bold" data-bs-toggle="tab" href="#joined_groups">👥 参加中</a>
  </li>
</ul>

<div class="tab-content mt-4">
  <!-- 🔍 検索結果タブ -->
  <div class="tab-pane fade show active" id="search_results">
    <% if @query.present? %>
      <div class="alert alert-info fw-bold">
        <h2>「<%= @query %>」の検索結果</h2>
      </div>
      <% if @groups.any? %>
        <div class="row">
          <% @groups.each do |group| %>
            <%= render "public/shared/group_card", group: group %>
          <% end %>
        </div>
      <% else %>
        <div class="alert alert-warning text-center">
          <p>該当するグループが見つかりませんでした。</p>
        </div>
      <% end %>
    <% end %>
  </div>

  <!-- ⭐ 人気グループタブ -->
  <div class="tab-pane fade" id="popular_groups">
    <% if @popular_groups.present? %>
      <div class="row">
        <% @popular_groups.each do |group| %>
          <%= render "public/shared/group_card", group: group %>
        <% end %>
      </div>
    <% else %>
      <p class="text-muted text-center">人気のグループはありません。</p>
    <% end %>
  </div>

  <!-- 👥 参加中のグループタブ -->
  <div class="tab-pane fade" id="joined_groups">
    <% if @joined_groups.present? %>
      <div class="row">
        <% @joined_groups.each do |group| %>
          <%= render "public/shared/group_card", group: group %>
        <% end %>
      </div>
    <% else %>
      <p class="text-muted text-center">参加中のグループはありません。</p>
    <% end %>
  </div>
</div>
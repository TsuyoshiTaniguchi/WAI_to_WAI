<h1>オーナー管理画面</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>グループ名</th>
      <th>承認待ちメンバー数</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @owned_groups.each do |group| %>
      <tr>
        <td><%= link_to group.name, manage_group_path(group) %></td>
        <td><%= group.memberships.where(status: "pending").count %> 人</td>
        <td><%= link_to "管理ページへ", manage_group_path(group), class: "btn btn-primary btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
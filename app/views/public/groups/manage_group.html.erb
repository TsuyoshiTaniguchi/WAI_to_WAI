<h1><%= @group.name %> の参加リクエスト</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>ユーザー名</th>
      <th>申請日</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @pending_members.each do |membership| %>
      <tr>
        <td><%= membership.user.name %></td>
        <td><%= membership.created_at.strftime("%Y/%m/%d %H:%M") %></td>
        <td>
          <%= button_to "✅ 承認", approve_membership_path(membership), method: :patch, class: "btn btn-success btn-sm" %>
          <%= button_to "❌ 拒否", reject_membership_path(membership), method: :delete, class: "btn btn-danger btn-sm" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
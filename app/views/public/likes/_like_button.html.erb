<% if post.liked_by?(current_user) %>
  <%= button_to post_like_path(post, post.likes.find_by(user_id: current_user.id)), method: :delete, remote: true, class: "like-btn active" do %>
    <i class="fas fa-thumbs-up text-primary"></i> <span class="like-count"><%= post.likes.count %></span>
  <% end %>
<% else %>
  <%= button_to post_likes_path(post), method: :post, remote: true, class: "like-btn" do %>
    <i class="far fa-thumbs-up text-secondary"></i> <span class="like-count"><%= post.likes.count %></span>
  <% end %>
<% end %>
<% if post.liked_by?(current_user) %>
  <%= link_to post_like_path(post, post.likes.find_by(user_id: current_user.id)), method: :delete do %>
    👍 <span><%= post.likes.count %></span>
  <% end %>
<% else %>
  <%= link_to post_likes_path(post), method: :post do %>
    🤍 <span><%= post.likes.count %></span>
  <% end %>
<% end %>

<h3>日報の検索・フィルタリング</h3>

<form action="<%= daily_reports_path %>" method="get" class="mb-4">
  <div class="row">
    <!-- 期間フィルタ -->
    <div class="col-md-4">
      <label>期間で検索:</label>
      <select name="date_range" class="form-select">
        <option value="7">過去7日間</option>
        <option value="30">過去30日間</option>
        <option value="90">過去3ヶ月</option>
      </select>
    </div>

    <!-- スキルタグフィルタ -->
    <div class="col-md-4">
      <label>スキルタグで検索:</label>
      <select name="skill_tag" class="form-select">
        <% SkillTag.all.each do |tag| %>
          <option value="<%= tag.id %>"><%= tag.name %></option>
        <% end %>
      </select>
    </div>

    <!-- 重要度フィルタ -->
    <div class="col-md-4">
      <label>重要度で検索:</label>
      <select name="importance_level" class="form-select">
        <option value="1">低</option>
        <option value="3">中</option>
        <option value="5">高</option>
      </select>
    </div>
  </div>

  <button type="submit" class="btn btn-primary mt-3">検索</button>
</form>

<!-- 公開・非公開フィルタ -->
<h4>表示設定</h4>
<div class="form-check">
  <input class="form-check-input" type="checkbox" name="visibility" value="public" checked>
  <label class="form-check-label">公開日報のみ表示</label>
</div>
<div class="form-check">
  <input class="form-check-input" type="checkbox" name="visibility" value="private">
  <label class="form-check-label">非公開日報も表示</label>
</div>
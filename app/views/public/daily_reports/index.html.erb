<!-- 日報一覧のタイトルは、閲覧対象が自分自身かどうかで表示内容を変える -->
<h1>
  <% if @user == current_user %>
    日報一覧
  <% else %>
    <%= @user.name %>さんの日報一覧
  <% end %>
</h1>

<%# 自分のページなら「新規日報作成」ボタンを表示する %>
<% if @user == current_user %>
  <%= link_to '新規日報作成', new_daily_report_path, class: "btn btn-primary mb-3" %>
<% end %>

<%# フラッシュメッセージ（作成・更新・削除の結果の通知） %>
<% if flash[:notice] %>
  <div class="alert alert-success"><%= flash[:notice] %></div>
<% elsif flash[:alert] %>
  <div class="alert alert-danger"><%= flash[:alert] %></div>
<% end %>

<div class="row">
  <% @daily_reports.each do |report| %>
    <div class="col-md-4 mb-3">
      <div class="card h-100">
        <div class="card-body d-flex flex-column">
          <h5 class="card-title"><%= report.date.strftime("%Y年%m月%d日") %></h5>
          <p class="card-text mb-1"><strong>場所:</strong> <%= report.location %></p>
          <p class="card-text flex-grow-1"><%= truncate(report.content, length: 100) %></p>
          <%# 自分のページなら編集・削除リンクを表示する %>
          <% if @user == current_user %>
            <div class="d-flex justify-content-between mt-2">
              <%= link_to '編集', edit_daily_report_path(report), class: "btn btn-warning btn-sm" %>
              <%= link_to '削除', daily_report_path(report), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger btn-sm" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="mt-3 d-flex justify-content-between">
  <%# ユーザー詳細ページの場合：戻るリンクとしてユーザー詳細に戻る %>
  <% if @user != current_user %>
    <%= link_to "ユーザー詳細に戻る", user_path(@user), class: "btn btn-secondary" %>
  <% else %>
    <%= link_to "マイページに戻る", users_mypage_path, class: "btn btn-success" %>
  <% end %>
  <%= link_to "トップへ戻る", root_path, class: "btn btn-secondary" %>
</div>
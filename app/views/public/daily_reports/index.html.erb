<h1>日報一覧</h1>
<%= link_to '新規日報作成', new_daily_report_path, class: "btn btn-primary mb-3" %>

<% if flash[:notice] %>
  <div class="alert alert-success"><%= flash[:notice] %></div>
<% elsif flash[:alert] %>
  <div class="alert alert-danger"><%= flash[:alert] %></div>
<% end %>

<div class="row">
  <% @daily_reports.each do |report| %>
    <div class="col-md-4 mb-3">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= report.date.strftime("%Y年%m月%d日") %></h5>
          <p class="card-text"><strong>場所:</strong> <%= report.location %></p>
          <p class="card-text"><%= truncate(report.content, length: 100) %></p>
          <div class="d-flex justify-content-between">
            <%= link_to '編集', edit_daily_report_path(report), class: "btn btn-warning btn-sm" %>
            <%= link_to '削除', daily_report_path(report), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger btn-sm" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="mt-3">
  <%= link_to "マイページに戻る", users_mypage_path, class: "btn btn-success" %>
  <%= link_to "トップへ戻る", root_path, class: "btn btn-secondary" %>
</div>
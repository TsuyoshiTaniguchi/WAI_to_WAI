<%= form_with(model: @daily_report, local: true) do |form| %>
  <% if @daily_report.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(@daily_report.errors.count, "エラー") %> が発生しました:</h2>
      <ul>
        <% @daily_report.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- 基本項目 -->
  <div class="mb-3">
    <%= form.label :date, "日付" %>
    <%= form.date_field :date, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :location, "都市名" %>
    <%= form.text_field :location, class: "form-control" %>
  </div>

  <!-- 位置情報取得 -->
  <div class="mb-3">
    <label>現在地を取得:</label>
    <button type="button" class="btn btn-info" onclick="getLocation()">位置情報取得</button>
    <input type="hidden" name="daily_report[latitude]" id="latitude">
    <input type="hidden" name="daily_report[longitude]" id="longitude">
  </div>

  <div class="mb-3">
    <%= form.label :content, "活動内容" %>
    <%= form.text_area :content, class: "form-control", rows: 5 %>
  </div>

  <!-- 拡張項目 -->
  <div class="mb-3">
    <%= form.label :task_achievement, "タスク達成度" %>
    <!-- プルダウンで1～10を選択 -->
    <%= form.select :task_achievement, options_for_select((1..10).map { |n| [n, n] }, @daily_report.task_achievement), {}, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :self_evaluation, "自己評価" %>
    <!-- プルダウンで1～10を選択 -->
    <%= form.select :self_evaluation, options_for_select((1..10).map { |n| [n, n] }, @daily_report.self_evaluation), {}, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :learning, "学びと改善点" %>
    <%= form.text_area :learning, class: "form-control", rows: 3, placeholder: "今日の気づき、学び、改善点を記入してください" %>
  </div>

  <!-- 将来の目標値入力 -->
  <div class="mb-3">
    <%= form.label :future_goal_value, "将来の目標値（数値）" %>
    <%= form.number_field :future_goal_value, class: "form-control", placeholder: "例：10" %>
  </div>

  <!-- 目標達成日数入力 -->
  <div class="mb-3">
    <%= form.label :future_goal_days, "目標日数（何日後の目標か）" %>
    <%= form.number_field :future_goal_days, class: "form-control", placeholder: "例：5" %>
  </div>

  <%= form.submit @daily_report.new_record? ? "作成する" : "更新する", class: "btn btn-primary" %>
<% end %>
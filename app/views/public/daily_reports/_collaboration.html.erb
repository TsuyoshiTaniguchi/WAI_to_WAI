<h1>日報詳細</h1>

<!-- 成長データ & 技術トレンド -->
<div class="row">
  <div class="col-md-6">
    <h3>成長の推移</h3>
    <canvas id="growthChart"></canvas>
  </div>

  <div class="col-md-6">
    <h3>スキル習熟度</h3>
    <div class="skill-tags">
      <% @daily_report.skill_tags.each do |tag| %>
        <span class="badge bg-info"><%= tag.name %></span>
      <% end %>
    </div>
  </div>
</div>

<!-- 影響度・成果 -->
<div class="mt-4">
  <h3>日報の影響度・成果</h3>
  <div class="row">
    <div class="col-md-4">
      <h4>技術的な成果</h4>
      <ul>
        <% @daily_report.technologies.each do |tech| %>
          <li><strong><%= tech.name %></strong> - <%= tech.impact_description %></li>
        <% end %>
      </ul>
    </div>

    <div class="col-md-4">
      <h4>学びと改善点</h4>
      <ul>
        <% @daily_report.learned_lessons.each do |lesson| %>
          <li>✅ <%= lesson %></li>
        <% end %>
      </ul>
    </div>

    <div class="col-md-4">
      <h4>影響スコア</h4>
      <p>プロジェクトへの貢献度: <%= @daily_report.impact_score %>/10</p>
      <div class="progress">
        <div class="progress-bar progress-bar-striped" role="progressbar" style="width: <%= @daily_report.impact_score * 10 %>%;" aria-valuenow="<%= @daily_report.impact_score %>" aria-valuemin="0" aria-valuemax="10"></div>
      </div>
    </div>
  </div>
</div>

<!-- 未来の成長予測 -->
<div class="mt-4">
  <h3>未来の成長予測</h3>
  <div class="row">
    <div class="col-md-6">
      <h4>技術強化プラン</h4>
      <ul>
        <% @daily_report.future_goals.each do |goal| %>
          <li><strong><%= goal.period %></strong>: <%= goal.description %></li>
        <% end %>
      </ul>
    </div>

    <div class="col-md-6">
      <h4>技術の成長予測</h4>
      <canvas id="futureGrowthChart"></canvas>
    </div>
  </div>
</div>

<!-- チーム貢献度・コラボレーション -->
<div class="mt-4">
  <h3>チーム貢献度・コラボレーション履歴</h3>
  <div class="row">
    <div class="col-md-6">
      <h4>最近のチーム作業</h4>
      <ul>
        <% @daily_report.collaborations.each do |collab| %>
          <li>👥 <strong><%= collab.team_member.name %></strong> と <%= collab.task_description %></li>
        <% end %>
      </ul>
    </div>

    <div class="col-md-6">
      <h4>共有した知識・助け合い</h4>
      <ul>
        <% @daily_report.shared_knowledge.each do |knowledge| %>
          <li>📖 <%= knowledge.summary %></li>
        <% end %>
      </ul>
    </div>
  </div>

  <div class="mt-4">
    <h4>スキルタグ別の貢献</h4>
    <canvas id="collaborationChart"></canvas>
  </div>
</div>

<script>
document.addEventListener("DOMContentLoaded", function () {
  let ctx = document.getElementById('growthChart');
  let futureCtx = document.getElementById('futureGrowthChart');
  let collabCtx = document.getElementById('collaborationChart');

  if (ctx) {
    fetch('/daily_reports/growth_data.json')
      .then(response => response.json())
      .then(data => {
        new Chart(ctx, {
          type: 'line',
          data: {
            labels: data.dates,
            datasets: [{
              label: "コード量 & 改善数",
              data: data.stats,
              borderColor: "rgba(75, 192, 192, 1)",
              fill: false
            }]
          },
          options: { responsive: true }
        });
      });
  }

  if (futureCtx) {
    fetch('/daily_reports/future_growth_data.json')
      .then(response => response.json())
      .then(data => {
        new Chart(futureCtx, {
          type: 'line',
          data: {
            labels: data.future_dates,
            datasets: [{
              label: "予測成長度",
              data: data.predicted_levels,
              borderColor: "rgba(255, 159, 64, 1)",
              fill: false
            }]
          },
          options: { responsive: true }
        });
      });
  }

  if (collabCtx) {
    fetch('/daily_reports/collaboration_data.json')
      .then(response => response.json())
      .then(data => {
        new Chart(collabCtx, {
          type: 'bar',
          data: {
            labels: data.skill_tags,
            datasets: [{
              label: "スキル別貢献度",
              data: data.contributions,
              backgroundColor: "rgba(255, 99, 132, 0.6)"
            }]
          },
          options: { responsive: true }
        });
      });
  }
});
</script>
<h2>マイページ</h2>

<%= link_to "プロフィール編集", edit_user_registration_path, class: "btn btn-primary" %>
<%= link_to "退会する", withdraw_public_user_path(current_user), method: :patch, class: "btn btn-danger", data: { confirm: "本当に退会しますか？" } %>

<h3><%= current_user.name %> さんの投稿一覧</h3>

<% if current_user.posts.present? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>タイトル</th>
        <th>内容</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% current_user.posts.each do |post| %>
        <tr>
          <td><%= link_to post.title, public_post_path(post) %></td>
          <td><%= post.content.truncate(50) %></td>
          <td>
            <%= link_to "編集", edit_public_post_path(post), class: "btn btn-warning" %>
            <%= link_to "削除", public_post_path(post), method: :delete, class: "btn btn-danger", data: { confirm: "本当に削除しますか？" } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>投稿がありません。</p>
<% end %>
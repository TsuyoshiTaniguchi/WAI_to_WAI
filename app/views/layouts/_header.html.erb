<header style="background-color: white; border-bottom: 2px solid #E0E0E0;">
  <nav class="container" style="display: flex; align-items: center; justify-content: space-between; padding: 10px 20px;">
    <!-- ロゴリンク：トップページへ -->
    <div class="logo">
      <%= link_to image_tag("main.jpg", alt: "MVP Portfolio Logo"), root_path, class: "logo" %>
    </div>

    <ul class="nav-menu" style="display: flex; gap: 20px; list-style: none; margin: 0; padding: 0; font-family: 'Montserrat', sans-serif;">
      <% if user_signed_in? %>
        <li style="color: #333;">ようこそ、<%= current_user.name %>さん！</li>
        
        <% unless current_user.guest? %> 
          <li>
            <%= render "public/shared/notifications" %>
          </li>
        <% end %>

        <li><%= link_to "マイページ", users_mypage_path, class: "nav-link", style: "color: #1ABC9C; text-decoration: none;" %></li>
        <li><%= link_to "ユーザー一覧", users_path, class: "nav-link", style: "color: #1ABC9C; text-decoration: none;" %></li>
        <li><%= link_to "グループ一覧", user_groups_path(current_user), class: "nav-link", style: "color: #1ABC9C; text-decoration: none;" %></li>
        <li><%= link_to "投稿一覧", posts_path, class: "nav-link", style: "color: #1ABC9C; text-decoration: none;" %></li>
        <li><%= button_to "ログアウト", logout_path, method: :post, class: "nav-link logout-link", style: "color: red !important;" %></li>

      <% elsif admin_signed_in? %>
        <li><%= link_to "ダッシュボード", admin_dashboard_path, class: "nav-link", style: "color: #1ABC9C; text-decoration: none;" %></li>
        <li><%= link_to "ユーザー管理", admin_users_path, class: "nav-link" %></li>
        <li><%= link_to "グループ管理", admin_groups_path, class: "nav-link" %></li>
        <li><%= link_to "投稿管理", admin_posts_path, class: "nav-link" %></li>
        <li><%= link_to "コメント管理", admin_comments_path, class: "nav-link" %></li>
        <li><%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "nav-link logout-link", style: "color: red !important;" %></li>

      <% else %>
        <li><%= link_to "新規登録", new_user_registration_path, class: "nav-link", style: "color: #1ABC9C; text-decoration: none;" %></li>
        <li><%= link_to "About", about_path, class: "nav-link", style: "color: #1ABC9C; text-decoration: none;" %></li>
        <li><%= link_to "ログイン", new_user_session_path, class: "nav-link", style: "color: #1ABC9C; text-decoration: none;" %></li>
      <% end %>
    </ul>
  </nav>
</header>